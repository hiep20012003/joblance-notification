{
  "name": "notification-service",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "dotenv -e .env.prod -- pm2 start ./build/src/app.js -i 5 --attach --watch",
    "stop": "pm2 stop all",
    "delete": "pm2 delete all",
    "dev": "dotenv -e .env.dev -- nodemon -r tsconfig-paths/register src/app.ts",
    "lint:check": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prettier:check": "prettier --check src/**/*.{ts,json}",
    "prettier:fix": "prettier --write src/**/*.{ts,json}",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json && ts-node tools/copyAssets.ts",
    "test": "jest --coverage --maxWorkers=1 --forceExit --detectOpenHandles --watchAll=false"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/amqplib": "^0.10.6",
    "@types/email-templates": "^10.0.4",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/nodemailer": "^6.4.17",
    "@types/shelljs": "^0.8.15",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-plugin-import": "^2.31.0",
    "jest": "^29.7.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.2",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.11",
    "tsconfig-paths": "^4.2.0",
    "typescript-eslint": "^8.33.0"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.17.1",
    "@hiep20012003/joblance-shared": "^0.0.1",
    "amqplib": "^0.10.5",
    "ejs": "^3.1.10",
    "email-templates": "^12.0.2",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "http-status-codes": "^2.3.0",
    "nodemailer": "^6.10.0",
    "shelljs": "^0.8.5",
    "typescript": "^5.7.3",
    "typescript-transform-paths": "^3.5.3",
    "winston": "^3.17.0"
  }
