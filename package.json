{
  "name": "notification-service",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "start": "dotenv -e .env.prod -- pm2 start ./build/src/app.js -i 5 --attach --watch",
    "stop": "pm2 stop all",
    "delete": "pm2 delete all",
    "dev": "dotenv -e .env.dev -- nodemon -r tsconfig-paths/register src/app.ts",
    "link": "npm link @hiep20012003/joblance-shared",
    "lint:check": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prettier:check": "prettier --check src/**/*.{ts,json}",
    "prettier:fix": "prettier --write src/**/*.{ts,json}",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "test": "jest --coverage --maxWorkers=1 --forceExit --detectOpenHandles --watchAll=false"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@hiep20012003/joblance-shared": "latest",
    "@stylistic/eslint-plugin": "^5.1.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/email-templates": "^10.0.4",
    "@types/estree": "^1.0.7",
    "@types/express": "^5.0.3",
    "@types/hpp": "^0.2.6",
    "@types/node": "^22.16.3",
    "@types/nodemailer": "^6.4.17",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.5.2",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.11",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0",
    "typescript-transform-paths": "^3.5.3"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.17.1",
    "@elastic/opentelemetry-node": "^1.6.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "ejs": "^3.1.10",
    "email-templates": "^12.0.2",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "http-status-codes": "^2.3.0",
    "mongoose": "^8.18.1",
    "nodemailer": "^6.10.0",
    "shelljs": "^0.8.5",
    "socket.io": "^4.8.1",
    "tslib": "^2.8.1",
    "umzug": "^3.8.2"
  }
}
